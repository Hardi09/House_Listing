<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
  <style>
    /* Reset some default styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Body styles */
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    /* Form container */
    .form-container {
      background-color: #fff;
      border-radius: 20px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      padding: 30px;
      width: 360px;
    }

    /* Form styles */
    form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    label {
      font-weight: bold;
      margin-bottom: 10px;
      text-align: left;
      width: 100%;
    }

    input {
      padding: 10px;
      border: none;
      border-radius: 5px;
      background-color: #f4f4f4;
      font-size: 16px;
      margin: 5px 0;
      width: 100%;
    }

    input[type="submit"] {
      background-color: #3498db;
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      border-radius: 5px;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    input[type="submit"]:hover {
      background-color: #2980b9;
    }

    /* Error message */
    .error-message {
      color: red;
      margin-top: 10px;
    }

    /* Success message */
    .success-message {
      color: green;
      margin-top: 10px;
    }

    /* Go to Main Dashboard button */
    .dashboard-button {
      background-color: transparent;
      color: #3498db;
      border: 2px solid #3498db;
      padding: 10px 20px;
      margin-top: 20px;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s, color 0.3s;
    }

    .dashboard-button:hover {
      background-color: #3498db;
      color: white;
    }

    /* Creative h1 styles */
    .creative-heading {
      font-size: 2.5rem;
      color: #3498db;
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <h1 class="creative-heading">Sign Up</h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <p class="error-message"><%= error %></p>
      <% } else if (typeof success !== 'undefined' && success) { %>
        <p class="success-message"><%= success %></p>
      <% } %>
      <form action="/signup" method="POST">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" required>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" required>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" required>
        <label for="contactNumber">Contact Number:</label>
        <input type="text" name="contactNumber" id="contactNumber" required>
        <input type="submit" value="Sign Up">
      </form>
      <button class="dashboard-button" onclick="location.href='/MainDashboard'">Back to Homepage</button>
    </div>
  </div>
</body>
</html>
