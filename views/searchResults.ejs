<!DOCTYPE html>
<html>
<head>
  <title>House Search Results</title>
  <style>
    /* Reset some default styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Body styles */
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    /* Card styles */
    .card-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 20px;
    }

    .card {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: left;
      width: 300px;
      transition: box-shadow 0.3s;
    }

    .card:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    /* Image styles */
    .card img {
      max-width: 100%;
      height: auto;
      margin-top: 10px;
    }

    /* Button styles */
    button {
      background-color: #f43f09;
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      border-radius: 5px;
      font-size: 16px;
      margin-top: 20px;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #2980b9;
    }

    /* Result styles */
    .result {
      margin: 10px 0;
    }

    .result p {
      font-size: 18px;
    }

    .no-results {
      font-size: 24px;
      margin: 20px;
    }

    /* Heading styles */
    h1 {
      font-size: 28px;
      color: #007bff;
      margin-bottom: 20px;
    }
     /* Heading styles */
     .title {
      background-color: #2e392f;
      color: white;
      font-size: 32px;
      padding: 10px 20px;
      border-radius: 10px;
      margin-bottom: 20px;
    }
    /* Error styles */
    .error {
      color: red;
      font-size: 18px;
      margin: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="title">House Search Results</h1>
    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } else { %>
      <% if (houses.length === 0) { %>
        <div class="no-results">No houses found.</div>
      <% } else { %>
        <div class="card-container">
          <% houses.forEach(house => { %>
            <div class="card">
              <h2><%= house.title %></h2>
              <p><%= house.description %></p>
              <div class="result">
                <p><strong>Price:</strong> <%= house.price %></p>
                <p><strong>Location:</strong> <%= house.location %></p>
              </div>
              <div class="image-container">
                <% house.photos.forEach(photo => { %>
                  <img src="<%= photo %>" alt="<%= house.title %> Photo">
                <% }) %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    <% } %>

    <button onclick="location.href='/Houses'" class="btn btn-danger">View All Houses</button>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</body>
</html>
