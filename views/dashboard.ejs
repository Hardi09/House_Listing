  <div> 
    <button class="logout-button btn btn-danger" type="button" onclick="location.href='/'">Logout</button>
  </div>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>