<!DOCTYPE html>
<html>
<head>
  <title>All Houses</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <style>
    body {
      padding: 20px;
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

    /* Styling for form container */
    .form-container {
      margin-bottom: 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Styling for search forms */
    form {
      display: flex;
      align-items: center;
    }

    label {
      font-weight: bold;
      margin-right: 10px;
    }

    .search-icon {
      font-size: 20px;
      color: #555555;
    }

    button[type="submit"] {
      font-weight: bold;
      padding: 10px 15px;
      background-color: #007bff;
      border: none;
      border-radius: 5px;
      color: white;
      cursor: pointer;
    }

    input[type="text"] {
      padding: 8px 30px 8px 40px;
      border: 1px solid #ccc;
      border-radius: 5px;
      width: 300px;
    }

    .search-container {
      position: relative;
    }

    .search-icon {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      left: 10px;
    }

    .house-list {
      list-style: none;
      padding-left: 0;
    }

    .house-item {
      border: 1px solid #ddd;
      border-radius: 10px;
      margin: 10px 0;
      padding: 15px;
      background-color: #ffffff;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

   /* Set a fixed height for the house images */
  .house-image {
    max-width: 100%;
    width : 400px;
    height: 200px; /* Set your desired height */
    object-fit: cover; /* Maintain aspect ratio and cover the container */
    margin-bottom: 15px;
  }
    .house-details {
      font-size: 16px;
      margin-top: 10px;
      color: #555555;
    }

    button[type="submit"] {
      font-weight: bold;
      padding: 8px 15px; /* Adjusted button height */
      background-color: #CCCC33;
      border: none;
      border-radius: 5px;
      color: white;
      cursor: pointer;
    }

    .house-price {
      font-size: 18px;
      font-weight: bold;
      color: #007bff;
    }

    .button-group {
      margin-top: 15px;
    }

    .all-houses-title {
      font-size: 60px;
      font-weight: bold;
      margin-bottom: 30px;
      color: white; /* Text color */
      text-align: center;
      background-color: #66BB55; /* Background color */
      padding: 10px 0; /* Add vertical padding */
      border-radius: 10px; /* Rounded corners */
      box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.2); /* Shadow */
    }

    /* Style for "Add House" button */
    .btn-add-house {
      font-size: 20px;
      font-weight: bold;
      background-color: #443754;
      border: none;
      border-radius: 5px;
      color: white;
      cursor: pointer;
    }
    /* Styling for buttons */
    .btn-primary, .btn-danger, .btn-secondary, .btn-info {
      font-size: 14px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="button-group">
      <button onclick="location.href='/Dashboard'" type="button" class="btn btn-danger">HomePage</button>
    </div>
    <h1 class="mt-4 all-houses-title">Discover Our Beautiful Houses</h1>
    <div class="form-container">
      <div class="button-group">
        <button onclick="location.href='/add-house'" type="button" class="btn btn-add-house">Add House</button>
     </div>
      <!-- Search by Title -->
      <form action="/search" method="GET">
        <div class="search-container">
          <span class="search-icon">&#128269;</span>
          <input type="text" name="title" id="title" placeholder="Search Houses by Title" required>
        </div>
        <button type="submit">Search</button>
      </form>

      <!-- Search by Location -->
      <form action="/search" method="GET">
        <div class="search-container">
          <span class="search-icon">&#128269;</span>
          <input type="text" name="location" id="location" placeholder="Search Houses by Location" required>
        </div>
        <button type="submit">Search</button>
      </form>
    </div>
      
    <% if (houses.length === 0) { %>
      <p><%= error %></p>
    <% } else { %>
      <ul class="house-list">
        <% houses.forEach(house => { %>
          <li class="house-item">
            <div class="row">
              <div class="col-md-4">
                <img src="<%= house.photos[0] %>" alt="House Image" class="house-image">
              </div>
              <div class="col-md-8">
                <h2><%= house.title %></h2>
                <p class="house-price">Price: <%= house.price %></p>
                <p class="house-details"><strong>Description:</strong> <%= house.description %></p>
                <p class="house-details"><strong>Location:</strong> <%= house.location %></p>
                <div class="button-group">
                  <% if (house.userID && currentUser && house.userID.toString() === currentUser._id.toString()) { %>
                    <button onclick="location.href='/update-house/<%= house._id %>'" type="button" class="btn btn-secondary">Update</button>
                    <button onclick="location.href='/delete-house/<%= house._id %>'" type="button" class="btn btn-danger">Delete</button>
                  <% } %>
                  <button onclick="location.href='/owner-details/<%= house.title %>'" type="button" class="btn btn-info">View Owner Details</button>
                </div>
              </div>
            </div>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
